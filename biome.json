{
  "$schema": "https://biomejs.dev/schemas/2.2.6/schema.json",
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "linter": {
    "rules": {
      "recommended": true,
      "suspicious": {
        "noUnknownAtRules": "off"
      }
    }
  },
  "files": {
    "includes": [
      "src/**/*",
      "messages/**/*",
      "next.config.mjs",
      "tailwind.config.ts",
      "postcss.config.mjs",
      "vitest.config.ts"
    ]
  }
}
